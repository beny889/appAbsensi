<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Profile Image Container -->
        <FrameLayout
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginEnd="16dp">

            <!-- Profile Image (loaded with Glide) -->
            <ImageView
                android:id="@+id/ivProfileImage"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:scaleType="centerCrop"
                android:visibility="gone"
                tools:visibility="visible"
                tools:src="@drawable/ic_launcher_foreground" />

            <!-- Profile Initial (fallback when no image) -->
            <TextView
                android:id="@+id/tvProfileIcon"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@drawable/bg_profile_circle"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:text="J" />
        </FrameLayout>

        <!-- User Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#212121"
                android:textSize="16sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="John Doe" />

            <TextView
                android:id="@+id/tvUserPosition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textColor="#757575"
                android:textSize="12sp"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="Software Engineer" />

            <!-- Check-in/out times -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvCheckInTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#4CAF50"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    tools:text="Masuk: 08:30" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="12dp"
                    android:layout_marginHorizontal="8dp"
                    android:background="#BDBDBD" />

                <TextView
                    android:id="@+id/tvCheckOutTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#F44336"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    tools:text="Pulang: 17:30" />
            </LinearLayout>
        </LinearLayout>

        <!-- Status Badge -->
        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_status_badge"
            android:paddingHorizontal="12dp"
            android:paddingVertical="6dp"
            android:textColor="@android:color/white"
            android:textSize="11sp"
            android:textStyle="bold"
            tools:text="HADIR" />
    </LinearLayout>

</androidx.cardview.widget.CardView>
