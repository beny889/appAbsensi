<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="24dp"
    app:cardCornerRadius="24dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp">

        <!-- Icon Container with Circle Background -->
        <FrameLayout
            android:id="@+id/iconContainer"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="24dp">

            <View
                android:id="@+id/iconBackground"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/circle_success" />

            <ImageView
                android:id="@+id/ivIcon"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_gravity="center"
                android:src="@android:drawable/ic_dialog_info"
                app:tint="@android:color/white" />
        </FrameLayout>

        <!-- Title -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Berhasil!"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="12dp" />

        <!-- Message -->
        <TextView
            android:id="@+id/tvMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Operasi berhasil dilakukan"
            android:textSize="16sp"
            android:textColor="#666666"
            android:gravity="center"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="8dp" />

        <!-- Sub Message (optional) -->
        <TextView
            android:id="@+id/tvSubMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="14sp"
            android:textColor="#999999"
            android:gravity="center"
            android:visibility="gone"
            android:layout_marginBottom="24dp" />

        <!-- Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAction"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="OK"
            android:textSize="16sp"
            android:textAllCaps="false"
            app:cornerRadius="28dp"
            app:backgroundTint="#4CAF50" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
